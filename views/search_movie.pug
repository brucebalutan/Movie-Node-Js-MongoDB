extends layout 

block content 
    h1 Search movie
    //- Create form for movie and post to express route
    form(method="POST", action="/movies/search")
        //- Create input elements based on movie model
        #form-group 
            label Name:
            input.form-control(name="name", type="text")
    
        #form-group 
            label Year:
            input.form-control(name="year", type="text")

        #form-group 
            label Rating:
            input.form-control(name="rating", type="number")
        
        input.btn.btn-primary(type="submit", value="Submit")